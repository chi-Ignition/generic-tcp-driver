<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>module-distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/module/module.xml</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/module/license.html</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>target/doc</directory>
			<outputDirectory>/doc</outputDirectory>
			<includes>
				<include>*.html</include>
				<include>*.css</include>
			</includes>
			<excludes>
				<exclude>module-manual.html</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/doc/image_en</directory>
			<outputDirectory>/doc/image_en</outputDirectory>
			<includes>
				<include>*.png</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<useTransitiveDependencies>false</useTransitiveDependencies>
		</dependencySet>
	</dependencySets>
</assembly>